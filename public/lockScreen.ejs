!doctype html>

<head>
    <meta charset="utf-8">
    <title>锁定屏幕 |NilBridge</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description">
    <meta content="Themesdesign" name="author">

    <!-- Bootstrap Css -->
    <link href="static/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <!-- Icons Css -->
    <link href="static/css/icons.min.css" rel="stylesheet" type="text/css">
    <!-- App Css-->
    <link href="static/css/app.min.css" rel="stylesheet" type="text/css">
    <script src="static/js/md5.js"></script>
</head>

<body class="bg-primary bg-pattern">
    <div class="home-btn d-none d-sm-block">
        <a href="/main"><i class="mdi mdi-home-variant h2 text-white"></i></a>
    </div>

    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-xl-5 col-sm-8">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="p-2">
                                <h5 class="mb-5 text-center">屏幕已锁定</h5>
                                <form class="form-horizontal">

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="user-thumb text-center">
                                                <img src="<%= user.pic %> "
                                                    class="rounded-circle avatar-lg img-thumbnail mx-auto d-block"
                                                    alt="thumbnail">
                                            </div>

                                            <div class="form-group form-group-custom mt-5">
                                                <input type="password" class="form-control" id="userpassword"
                                                    required="">
                                                <label for="userpassword">密码</label>
                                            </div>
                                            <script type="text/javascript">
                                                function login() {
                                                    var xmlhttp;
                                                    if (window.XMLHttpRequest) {
                                                        xmlhttp = new XMLHttpRequest();
                                                    }
                                                    else {
                                                        xmlhttp = new ActiveXObject("Microsoft.XMLHTTP");
                                                    }
                                                    xmlhttp.onreadystatechange = function () {
                                                        if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                                                            let res = JSON.parse(xmlhttp.responseText);
                                                            switch (res.code) {
                                                                case 200:
                                                                    info('验证成功！准备跳转');
                                                                    setTimeout(() => {
                                                                        window.location.href = "/main";
                                                                    }, 1000);
                                                                    break;
                                                                case 407:
                                                                    warn('密码错误！！');
                                                                    break;
                                                                case 400:
                                                                    errormsg('没有这个用户 ！！');
                                                                    break;
                                                                default:
                                                                    errormsg('验证出错！！');
                                                                    break;
                                                            }
                                                        } else {
                                                            errormsg("校验失败！！！")
                                                        }
                                                    }
                                                    xmlhttp.open("POST", "/lockscreen", true);
                                                    xmlhttp.setRequestHeader("Content-type", "application/json");
                                                    xmlhttp.send(JSON.stringify({ pwd: hex_md5(document.getElementById("userpassword").value) }));
                                                }
                                                function warn(txt) {
                                                    document.getElementById('notice').innerHTML = `<div class="alert alert-warning alert-dismissible fade show" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    ${txt}
                                                </div>`
                                                }
                                                function info(txt) {
                                                    document.getElementById('notice').innerHTML = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    ${txt}
                                                </div>`
                                                }
                                                function errormsg(txt) {
                                                    document.getElementById('notice').innerHTML = `<div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    ${txt}
                                                </div>`
                                                }
                                            </script>
                                            <div class="" id="notice"></div>
                                            <div class="mt-4">
                                                <button type="button" class="btn btn-success btn-block waves-effect waves-light"
                                                    onclick="login()">解锁</button>
                                            </div>
                                            <div class="mt-4 text-center">
                                                <p class="mb-0">不是你的账户 ？ 返回<a href="/logout"
                                                        class="font-weight-medium text-primary"> 登入 </a> </p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- end Account pages -->

    <!-- JAVASCRIPT -->
    <script src="static/js/jquery.min.js"></script>
    <script src="static/js/bootstrap.bundle.min.js"></script>
    <script src="static/js/metisMenu.min.js"></script>
    <script src="static/js/simplebar.min.js"></script>
    <script src="static/js/waves.min.js"></script>

    <script src="static/js/bundle.js"></script>


    <script src="static/js/app.js"></script>

</body>

</html>